<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="blog" extends="struts-default">
        <action name="writeArticle" class="actions.WriteArticleAction" method="execute">
            <result name="success">/web-content/article.jsp</result>
        </action>
    </package>
    <package name="ajax" namespace="/" extends="json-default">
        <action name="checkuserName" class="actions.CheckUserNameAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="register" class="actions.RegisterAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="login" class="actions.LoginAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="signed" class="actions.SignedAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="changePassword" class="actions.ChangePasswordAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="findPassword" class="actions.FindPasswordAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="listArticle" class="actions.ListArticlesAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="signOut" class="actions.SignOutAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="listArticleComments" class="actions.ListArticleCommentsAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="insertArticleComment" class="actions.InsertArticleCommentAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>
