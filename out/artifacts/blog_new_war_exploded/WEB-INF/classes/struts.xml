<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="blog" extends="struts-default">
        <action name="writeArticle" class="actions.writeArticle" method="execute">
            <result name="success">/article.jsp</result>
        </action>
        <action name="listArticle" class="actions.listArticles" method="execute">
            <result name="success">/article.jsp</result>
        </action>
        <action name="insertArticleComment" class="actions.insertArticleComment" method="execute">
            <result name="success">/article.jsp</result>
        </action>
    </package>
    <package name="ajax" namespace="/" extends="json-default">
        <action name="checkuserName" class="actions.checkuserName" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="register" class="actions.registerAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="login" class="actions.loginAction" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="signed" class="actions.Signed" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="changePassword" class="actions.changePassword" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
        <action name="findPassword" class="actions.findPassword" method="execute">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>
